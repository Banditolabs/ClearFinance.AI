{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "moduleResolution": "node16",
    "lib": ["ESNext"],
    "outDir": "../dist-electron",
    "noEmit": false,
    "types": ["node"]
  },
  "include": [
    "../electron/**/*",
    "../backend/**/*",
    "../modules/**/*"
  ],
  "exclude": [
    "../src",
    "../dist",
    "../node_modules"
  ]
}